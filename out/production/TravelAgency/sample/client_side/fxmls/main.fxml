<?import java.net.URL?>
<?import javafx.scene.shape.Line?>
<VBox fx:controller="sample.client_side.Controllers.MainController"
      xmlns:fx="http://javafx.com/fxml" alignment="BASELINE_CENTER" spacing="16" prefWidth="1280" prefHeight="720">

